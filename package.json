{
  "name": "colemaclean-dev",
  "version": "0.0.1",
  "description": "Personal site",
  "private": true,
  "scripts": {
    "build": "remix build",
    "dev": "node --require ./mocks ./node_modules/.bin/remix dev",
    "postinstall": "remix setup cloudflare-workers",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "start:mocks": "node --require ./mocks ./node_modules/.bin/remix-serve build",
    "deploy": "npm run build && wrangler publish",
    "test": "vitest",
    "typecheck": "tsc -b",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@remix-run/cloudflare-workers": "^1.2.1",
    "@remix-run/react": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@remix-run/dev": "^1.2.1",
    "@remix-run/eslint-config": "*",
    "@remix-run/serve": "^1.2.1",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/eslint": "^8.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react": "^1.2.0",
    "c8": "^7.11.0",
    "esbuild": "0.14.23",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "happy-dom": "^2.49.0",
    "miniflare": "2.3.0",
    "msw": "^0.39.2",
    "prettier": "^2.5.1",
    "typescript": "^4.1.2",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.7.4"
  },
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
